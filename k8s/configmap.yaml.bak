apiVersion: v1
kind: ConfigMap
metadata:
  name: mern-app-config
  namespace: mern-ecommerce
  labels:
    app: mern-ecommerce
data:
  # Backend configuration
  NODE_ENV: "production"
  PORT: "8000"
  MONGODB_HOST: "mongodb-service.mern-ecommerce.svc.cluster.local"
  MONGODB_PORT: "27017"
  MONGODB_DATABASE: "mern-ecommerce"
  
  # Frontend configuration
  REACT_APP_API_URL: "http://mern-ecommerce.local:8080/api"
  REACT_APP_ENVIRONMENT: "production"